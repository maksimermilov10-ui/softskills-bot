# callback-–∫–ª—é—á–∏
CB_TEST = "test"
CB_GUIDE_OPEN = "guide_open"
CB_GUIDE_FAST = "guide_fast"
CB_GUIDE_NEXT = "guide_next"
CB_GUIDE_PREV = "guide_prev"
CB_GUIDE_MENU = "guide_menu"
CB_EVENTS = "events"

# ===== –î–∞–Ω–Ω—ã–µ –ø–æ –∞–Ω–æ–Ω—Å–∞–º =====
EVENTS: List[dict] = [
